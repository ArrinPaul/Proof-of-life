# ============================================
# Backend PRODUCTION Environment Variables
# Set these in Railway dashboard, NOT in committed files
# ============================================

# Convex Database
CONVEX_URL=https://YOUR_CONVEX_DEPLOYMENT.convex.cloud

# Clerk Authentication
# Get from Clerk Dashboard: https://dashboard.clerk.com
CLERK_ISSUER_URL=https://YOUR_CLERK_INSTANCE.clerk.accounts.dev

# JWT Configuration (for PoL tokens)
JWT_SECRET_KEY=GENERATE_WITH_openssl_rand_base64_32
JWT_ALGORITHM=RS256
JWT_EXPIRY_MINUTES=15

# Session Configuration
SESSION_TIMEOUT_SECONDS=120
MAX_FAILED_ATTEMPTS=3

# ML Models
MEDIAPIPE_MODEL_PATH=/app/models/face_landmarker.task
DEEPFAKE_MODEL_PATH=/app/models/mesonet4_weights.h5

# CORS - set to your Vercel frontend URL
CORS_ORIGINS=https://YOUR_APP.vercel.app

# WebSocket
USE_WSS=true
WEBSOCKET_HOST=YOUR_RAILWAY_APP.up.railway.app
